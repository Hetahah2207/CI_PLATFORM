                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>*@

                                    @* @(item.MissionRatings.FirstOrDefault()?.Rating)*@
                                    @* @for (int i = 0; i <= @item.MissionRatings.FirstOrDefault()?.Rating; i++)
                                        {
                                        <i class="bi bi-star-fill" style="color: #F8D441;"></i>
                                        }*@
