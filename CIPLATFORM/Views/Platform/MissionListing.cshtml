                                    {
                                        <i class="bi bi-star-fill" style="color: #F8D441;"></i>
                                    }
                                    @for (int j = 1; j <= 5 - (int)@Model.relatedmissions[i].MissionRatings.Average(x => x.Rating); j++)
                                    {
                                        <i class="bi bi-star" style="color: #F8D441;"></i>
                                    }
                                </div>
                            </div>
