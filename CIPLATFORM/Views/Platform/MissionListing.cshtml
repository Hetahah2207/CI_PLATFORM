@using CI_PLATFORM.Entities.ViewModels
@model MissionListingViewModel
<link rel="stylesheet" href="~/css/MissionListing.css">



<hr class="d-none d-md-block">

<div class="container">
    <!-- ..............card..................... -->
    <div class="card mb-3 p-0">
        <div class="row g-0">
            <div class="col-lg-6">
                <!-- Container for the image gallery -->
                <div class="container p-0 pb-5 h-100" style="max-width: 100%;">

                    @for (int i = 1; i <= Model.missionmedias.Count; i++)
                    {
                        <div class="mySlides">

                            <img src=~/images/@(Model.missionmedias[i-1].MediaPath) style="width:100%;">
                        </div>
                    }


                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>
                    <div class="row g-1">

                        @for (int i = 1; i <= Model.missionmedias.Count; i++)
                        {
                            <div class="col">
                                <img class="demo cursor" src=~/images/@(Model.missionmedias[i-1].MediaPath) style="width:100%;" onclick="currentSlide(@i)">
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card-body">
                    <div class="row">
                        <h3 class="card-title">@Model.missions.Title</h3>


                        <p class="card-text">@Model.missions.ShortDescription </p>


                        <div class="wrapper  d-flex justify-content-center">
                            <hr class="divider">
                            <div class=" d-flex justify-content-center b2 ">
                                <div class="d-flex justify-content-center .left .right ">
                                    @if (Model.missions.MissionType == "Goal")
                                    {
                                        <span class="textline">@Model.missions.GoalMissions.FirstOrDefault()?.GoalObjectiveText </span>
                                    }
                                    else if (@Model.missions.StartDate <= DateTime.Now && DateTime.Now <= @Model.missions.EndDate)
                                    {
                                        <span>Ongoing Opportunity</span>


                                    }
                                    else
                                    {
                                        <span>@Model.missions.StartDate.ToString().Substring(0,10)  until @Model.missions.EndDate.ToString().Substring(0,10) </span>

                                    }
                                </div>
                            </div>
                            <hr class="divider">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 d-flex justify-content-center">
                            <i class="bi bi-person-check " style="font-size: 25px;"></i>
                            <span> 10 <br> seats left</span>
                        </div>
                        <div class="col-6 d-flex justify-content-center">
                            <i class="bi bi-clock" style="font-size: 25px;"></i>
                            <span> @Model.missions.EndDate.ToString().Substring(0,10) <br> Deadline</span>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-6">

                            <button type="submit" class="btn btn-outline-dark rounded-pill w-100" onclick="AddMissionToFavourite(@Model.missions.MissionId)">
                                <i class="bi bi-heart" id="addToFav"></i>
                                Add to Favourite
                            </button>

                        </div>
                        <div class="col-6">

                            <button type="button" class="btn btn-outline-dark rounded-pill w-100">
                                <i class="bi bi-square-fill"></i>
                                Recommend to a Co-Worker
                            </button>

                        </div>
                    </div>
                    <div class="row">
                        <div class="wrapper  d-flex justify-content-center">
                            <hr class="divider">
                            <div class=" d-flex justify-content-center  ">

                                <div class="d-flex justify-content-center align-items-center .left .right ">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                </div>

                            </div>
                            <hr class="divider">
                        </div>
                    </div>
                    <div class="container-fluid row row-cols-2 row-cols-sm-4 g-2 ">
                        <div class="col ">
                            <div class="h-100 border">

                                <i class="bi bi-geo-alt"></i>
                                <p class=" small">City: @Model.missions.City.Name</p>

                            </div>
                        </div>
                        <div class="col ">
                            <div class=" h-100  border">

                                <i class="bi bi-globe"></i>
                                <p class=" small">Theme:  @Model.missions.Theme.Title</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class=" h-100 border">

                                <i class="bi bi-calendar3"> </i>
                                <p class=" small"> @Model.missions.StartDate.ToString().Substring(0,10) <br> until @Model.missions.EndDate.ToString().Substring(0,10)</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class=" h-100  border">
                                <i class="bi bi-people"></i>
                                <p class=" small">Organization: @Model.missions.OrganizationName</p>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="apply2 d-flex justify-content-center">
                            <button type="button" class="btn btn-outline apply">
                                Apply Now
                                <i class=" ms-2 bi bi-arrow-right-short"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5 ratings">
        <div class="col-lg-8 col-md-7 pt-3">
            <ul class="nav nav-tabs" id="myTab" role="tablist" style="margin-top: 25px;">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-1" type="button"
                            role="tab" aria-controls="home" aria-selected="true">
                        Mission
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-2" type="button" role="tab"
                            aria-controls="profile" aria-selected="false">
                        Organization
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-3" type="button" role="tab"
                            aria-controls="contact" aria-selected="false">
                        Comments
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="tab-1" role="tabpanel">
                    <h3>Introduction</h3>
                    <span>
                        @Model.missions.Description<br><br>
                    </span>
                    <h3>Challenge</h3>
                    <span>
                        @Model.missions.Description<br><br>
                    </span>
                    <h3>Document</h3>
                    <div>
                        @foreach (var documents in Model.missiondocuments)
                        {
                            <a href=~/images/@documents.DocumentPath target="_blank">
                                <button type="submit " class="btn btn-outline-dark  rounded-pill ">
                                    @if (@documents.DocumentType == "PDF")
                                    {
                                        <i class="bi bi-filetype-pdf">@documents.DocumentName</i>
                                    }
                                    else if (@documents.DocumentType == "Image")
                                    {
                                        <i class="bi bi-file-image">@documents.DocumentName</i>

                                    }

                                </button>
                            </a>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="tab-2" role="tabpanel">
                    @Model.missions.OrganizationDetail
                </div>
                <div class="tab-pane fade" id="tab-3" role="tabpanel">
                    <form method="post">
                        <div class="form-group">
                            @ViewBag.ComntAdded
                            <textarea asp-for="commentDescription" class="form-control" id="exampleFormControlTextarea1" rows="3"
                                      placeholder="Enter your comments"></textarea>
                        </div>
                        <div class=" mt-3 mb-3">
                            <button type="submit" class="btn btn-outline-dark rounded-pill">
                                Post Comment
                            </button>
                        </div>
                        <div class="row ex1">

                            <div class="col-12 mt-4">
                                @foreach (var comment in Model.comments)
                                {
                                    <div class="container">
                                        <div class="row mt-4" style="background-color: white;">
                                            <div class="col-sm-3 col-12 d-flex justify-content-center align-items-center">
                                                <img src=~/images/@comment.User.Avatar
                                                 style="border-radius: 50%; height: 4.5em;" alt="">
                                            </div>
                                            <div class="col-sm-9 col-12 ">
                                                <span>@comment.User.FirstName</span>
                                                <p>@comment.CreatedAt.ToString("dddd, MMMM dd, yyyy, h.mm tt")</p>
                                                <p>@comment.CommentDescription</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-5 pt-3">

            <div class="container">
                <div class="border">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <ul class="nav nav-tabs" id="myTab" role="tablist" style="margin-top: 25px;">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-1"
                                                type="button" role="tab" aria-controls="home"
                                                aria-selected="true">
                                            Information
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">Skills</div>
                            <div class="col-9">
                                @*@Model.missionskills.Skill.SkillName*@
                                @foreach (var item in Model.missionskills)
                                {
                                    @item.Skill.SkillName <br />
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-3">Days</div>
                            <div class="col-9">@Model.missions.Avaibility</div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-3 pe-0">Rating</div>
                            <div class="col-9">

                                @for (int i = 1; i <= (int)@Model.missions.MissionRatings.Average(x => x.Rating); i++)
                                {
                                    <i class="bi bi-star-fill" style="color: #F8D441;"></i>
                                }
                                @for (int i = 1; i <= 5 - (int)@Model.missions.MissionRatings.Average(x => x.Rating); i++)
                                {
                                    <i class="bi bi-star" style="color: #F8D441;"></i>
                                }
                                (by @Model.missions.MissionRatings.Count volunteers)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ...............rec vol............. -->
            <div class="container pt-5">
                <div class="border">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 pt-3">
                                Recent Volunteers
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            @foreach (var data in Model.missionapplications)
                            {

                                <div class="col-4">
                                    <div class="row">
                                        <img src=~/images/@data.User.Avatar class="Volunteers" alt="">
                                    </div>
                                    <div class="row d-flex justify-content-center">
                                        @data.User.FirstName @data.User.LastName
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>..
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-12 d-flex justify-content-center" style="font-size: 30px;">
            Related Missions
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-3">
        @{
