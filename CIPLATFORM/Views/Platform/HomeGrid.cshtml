<div class="container-fluid">
    <div class="container">
        <div class="row d-flex">
            <nav class="navbar  navbar-expand-lg bg-body-tertiary p-0">
                <div class="container-fluid">
                    <div class="d-flex align-items-center col-lg-6 col-12  .navbar-search-sm" role="search">

                        <img src="~/images/search.png" class="search" />
                        <input class="form-control mx-1" type="search" placeholder="Search Missions..."
                               aria-label="Search">

                    </div>

                    <div class="col-lg-6 col-12 anchor">
                        <div class="row">
                            @*<div class="collapse navbar-collapse" id="navbarSupportedContent">*@
                            <div class=" col-6 col-sm-3 dropdown ">
                                <button class="h-item border  bg-light  w-100 p-0" type="button"
                                        data-bs-toggle="dropdown">

                                    <select id="countryId" onchange="GetCity()" class="form-select select-menu  profile-name d-flex justify-content-between h-100 w-100 "
                                            aria-label="Default select example" style="box-shadow: none;">
                                        <option selected>Country</option>
                                        @foreach (var obj in @ViewBag.countries)
                                        {
                                            <option value="@obj.CountryId">@obj.Name</option>
                                        }
                                    </select>
                                </button>
                            </div>
                            <div class=" col-6 col-sm-3 dropdown">
                                <button class="h-item border d-flex  bg-light align-items-center justify-content-between w-100 p-0" type="button"
                                        data-bs-toggle="dropdown">
                                    <select class="form-select select-menu profile-name d-flex justify-content-between h-100 w-100"
                                            aria-label="Default select example" style="box-shadow: none;" id="selectCityList">

                                        <option selected>City</option>

                                    </select>
                                </button>
                            </div>
                            <div class=" col-6 col-sm-3 pt-3 pt-sm-0 dropdown">
                                <button class="h-item border d-flex border align-items-center justify-content-between w-100 h-100 p-0" style="background-color:white;" type="button"
                                        data-bs-toggle="dropdown">
                                    Themes
                                    <img src="~/images/drop-down.png" alt="Profile-dropdown" />
                                </button>
                                <ul class="dropdown-menu scroll_dropdown" aria-labelledby="dropdownMenuButton1">
                                    @foreach (var obj in @ViewBag.themes)
                                    {
                                        <li>
                                            <div class="form-check dropdown-item p-0 w-100 ">
                                                <input class="form-check-input mx-auto ms-1" type="checkbox" value=""
                                                   id="@obj.MissionThemeId" />
                                                <label class="form-check-label ps-4" for="@obj.MissionThemeId">
                                                    @obj.Title
                                                </label>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class=" col-6 col-sm-3 pt-3 pt-sm-0 dropdown">
                                <button class="h-item border d-flex  align-items-center justify-content-between w-100 h-100 p-0" style="background-color:white;" type="button"
                                        data-bs-toggle="dropdown">
                                    <span class="profile-name d-flex">Skills</span>
                                    <img src="~/images/drop-down.png" alt="Profile-dropdown" />
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end w-100">
                                    @foreach (var obj in @ViewBag.skills)
                                    {
                                        <li>
                                            <div class="form-check dropdown-item p-0 w-100 ">
                                                <input class="form-check-input mx-auto ms-1" type="checkbox" value=""
                                                   id="@obj.SkillId" />
                                                <label class="form-check-label ps-0 ps-sm-4" for="@obj.SkillId">
                                                    @obj.SkillName
                                                </label>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                            @*</div>*@
                        </div>
                    </div>

                </div>
            </nav>
        </div>
    </div>
</div>


