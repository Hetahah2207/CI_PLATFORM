<div class="container">



    <div class="row">
        <div class="col-md-9 col-sm-12">Explore <b>72 missions</b></div>
        <div class="col-md-3 col-sm-12 d-flex justy">
            <div class="dropdown h-dropdown">
                <button style="background-color: white; border: none;">
                    <a class="nav-link dropdown-toggle  " href="#" id="navbarDropdown" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <span style="font-size: 14px;">short by</span>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#">Action1</a></li>
                        <li><a class="dropdown-item" href="#">Action1</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Action1</a></li>
                    </ul>
                </button>
            </div>
            <div class="">
                <a asp-controller="Platform" asp-action="HomeGrid">
                    <i class="bi bi-grid"></i>
                </a>
            </div>
            <div class="">
                <a asp-controller="Platform" asp-action="HomeList">
                    <i class="bi bi-list"></i>
                </a>
            </div>
        </div>
    </div>



    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">

        @foreach (var item in @ViewBag.MissionDeails)
        {
            <div class="col">
                <div class="card ">
                    <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-1.png" class="card-img-top" alt="...">
                    <div class="position-relative">
                        <div class="position-absolute top-100 start-50 translate-middle round p-2 title" style="background-color: white;">
                            @item.Theme.Title
                        </div>
                    </div>
                    <div class="card-img-overlay">
                        <p class="text-end text">
                            <button class="btn btn-box" style="background-color: rgb(65, 60, 60) ; opacity: 45%;">
                                <img src="~/images/pin.png" class="mx-2 cancle-img" alt="">
                                <span style="color: white ; ">@item.City.Name</span>
                            </button>



                        </p>
                        <div class="pt-1 text-end">
                            <button class="btn btn-box rounded-5" style="background-color: rgb(65, 60, 60) ; opacity: 45%;">
                                <img src="~/images/heart.png" class=" img-fluid cancle-img" alt="">
                            </button>
                        </div>

                        <div class="text-end">

                            <button class="btn btn-box rounded-5" style="background-color: rgb(65, 60, 60) ; opacity: 45%;">
                                <img src="~/images/user.png" class=" img-fluid cancle-img" alt="">
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">
                            @item.ShortDescription
                        </p>
                        <div class="container p-2">
                            <div class="row d-flex">
                                <div class="col-md-6">
                                    @item.OrganizationName
                                </div>
                                <div class="col-md-6">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                </div>
                            </div>
                        </div>
                        <div class="wrapper  d-flex justify-content-center">
                            <hr class="divider">
                            <div class=" d-flex justify-content-center b2 ">

                                <div class="d-flex justify-content-center .left .right ">
                                    @item.StartDate.ToShortDateString() until @item.EndDate.ToShortDateString()

                                </div>

                            </div>
                            <hr class="divider">
                        </div>
                        <div class="container">
                            <div class="row mt-2">
                                <div class="col-6 ">

                                    <i class="bi bi-person-check " style="font-size: 28px;"></i>
                                    10 <br>
                                    seats left

                                </div>
                                <div class="col-6 ">
                                    <i class="bi bi-clock" style="font-size: 25px;"></i>
                                     @item.EndDate.ToShortDateString() <br> Deadline
                                </div>
                            </div>
                        </div>

                        <hr>
                        <div class="d-flex justify-content-center apply2">
                            <button type="button" class="btn btn-outline apply">
                                Apply <i class=" ms-2 bi bi-arrow-right-short"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>