            <form method="post" class="formmain">

                <div class="form-group">
                    <label for="exampleInputEmail1"> Email address </label>
                    <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="evan.donohue@gmail.com" id="exampleInputEmail1" aria-label="Large" aria-describedby="emailHelp">
                    <span style="color:red;" asp-validation-for="Email"></span>
                </div>
                <br>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password </label>
                    <input asp-for="Password" type="password" class="form-control form-control-sm" id="exampleInputPassword1">
                    <span style="color:red;" asp-validation-for="Password"></span>
                </div>
                <br>
                <button type="submit" asp-action="Login" class="btn btn-outline btn-block" style="background: #F8863400 0% 0% no-repeat padding-box;
                  border: 2px solid #F88634;
                  border-radius: 24px;
                  opacity: 1; color:#F88634">
                    Login
                </button>
                <a asp-area="" asp-controller="User" asp-action="Forgotpassword" class="text-reset text-decoration-none">
                    <p class="text-center lh-lg m-3"> Lost your password? </p>
                </a>
                <div class="sign-up">
                    <p class="text-center">
                        Don't have an account? <a asp-area="" asp-controller="User" asp-action="Register" class="text-decoration-none"> Create an account </a>
                    </p>
                </div>

            </form>
            <div class="text-center">
                <a href=""> Privacy Policy </a>
